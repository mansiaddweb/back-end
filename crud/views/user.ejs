<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
        <h1 class='text-center my-2'><%= title %></h1>
        <a href='/add' class='btn btn-primary'>Add Student</a><br><br>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>E-Mail</th>
                    <th>Password</th>
                    <th>Mobile</th>
                    <th>Address</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                <% student.forEach(function(st){ %>
                    <tr>
                        <td><%= st.id %></td>
                        <td><%= st.Name %></td>
                        <td><%= st.email %></td>
                        <td><%= st.password %></td>
                        <td><%= st.mobile %></td>
                        <td><%= st.address %></td>
                        <td>
                            <a href="edit/<%= st.id %>" class='btn btn-success'>Edit</button>
                            <a href="delete/<%= st.id %>" class='btn btn-danger'>Delete</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    </body>
</html>